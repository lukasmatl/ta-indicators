{
  /** ROOT FIELDS **/
  /* File Inclusion */
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/*/__tests__/**"
  ],
  "compilerOptions": {
    /** COMPILER OPTIONS **/
    /* Basic Options */
    "lib": [
      "es6",
      "dom",
      "dom.iterable",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "esnext"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "lib",
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./typings"],
    "paths": {
      "*": ["*", "./typings/*"]
    }
  }
}
